<div class="card mb-3">
  <h2 class="card-header h4">
    Recipe Category #<%= recipe_category.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Category name</dt>
      <!-- Display category_name start -->
      <dd><%= recipe_category.category_name %></dd>
      <!-- Display category_name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back recipe_category, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link recipe_category start -->
      <div class="col">
        <%= link_to edit_recipe_category_url(recipe_category), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link recipe_category end -->

      <!-- Delete link recipe_category start -->
      <div class="col">
        <%= link_to recipe_category, method: :delete, data: { confirm: "Do you really want to delete this recipe_category?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link recipe_category end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(recipe_category.updated_at) %> ago
  </div>
</div>
