<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipes

    <a data-toggle="collapse" href="#recipe_category_recipes_new_form">
      Add recipe
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe_category.recipes.each do |recipe| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recipe, recipe %>

        <% if current_user == recipe.user %>
          <%= link_to recipe, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_category_recipes_new_form">
        <%= render partial: "recipe_categories/recipe_category_recipes_new_form" %>
      </div>
    </div>

  </ul>
</div>
