<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Shares

    <a data-toggle="collapse" href="#recipe_shares_new_form">
      Add share
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.shares.each do |share| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to share, share %>

        <%= link_to share, method: :delete, data: { confirm: "Do you really want to delete this share" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_shares_new_form">
        <%= render partial: "recipes/recipe_shares_new_form" %>
      </div>
    </div>

  </ul>
</div>
